{
  "name": "github-actions-workflows",
  "version": "2025.06.0.0",
  "private": true,
  "devDependencies": {
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/exec": "^6.0.3"
  },
  "release": {
    "plugins": [
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "node scripts/calendar-version-wrapper.js",
          "publishCmd": "echo \"ðŸ“… Publishing calendar version: $CALENDAR_VERSION\""
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "version.py"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}