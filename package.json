{
    "name": "github-actions-workflows",
    "version": "1.0.2",
    "private": true,
    "devDependencies": {
        "@semantic-release/git": "^10.0.1",
        "@semantic-release/exec": "^6.0.3",
        "@bobvanderlinden/semantic-release-pull-request-analyzer": "^1.0.4"
    },
    "release": {
        "plugins": [
            [
                "@bobvanderlinden/semantic-release-pull-request-analyzer",
                {
                    "labels": {
                        "breaking": "minor",
                        "feature": "minor",
                        "enhancement": "minor",
                        "bug": "patch",
                        "bugfix": "patch",
                        "fix": "patch",
                        "documentation": "patch",
                        "docs": "patch",
                        "chore": "patch"
                    }
                }
            ],
            [
                "@semantic-release/exec",
                {
                    "prepareCmd": "node scripts/generate-version.js ${nextRelease.type}"
                }
            ],
            [
                "@semantic-release/npm",
                {
                    "npmPublish": false
                }
            ],
            "@semantic-release/github",
            [
                "@semantic-release/git",
                {
                    "assets": [
                        "package.json",
                        "version.py"
                    ],
                    "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
                }
            ]
        ]
    }
}
