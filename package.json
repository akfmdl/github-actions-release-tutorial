{
    "name": "github-actions-workflows",
    "version": "1.0.0",
    "private": true,
    "devDependencies": {
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/git": "^10.0.1",
        "@bobvanderlinden/semantic-release-pull-request-analyzer": "^1.0.4",
        "@semantic-release/exec": "^6.0.3"
    },
    "release": {
        "plugins": [
            [
                "@bobvanderlinden/semantic-release-pull-request-analyzer",
                {
                    "labels": {
                        "breaking": "major",
                        "feature": "minor",
                        "enhancement": "minor",
                        "bug": "patch",
                        "bugfix": "patch",
                        "fix": "patch",
                        "documentation": "patch",
                        "docs": "patch",
                        "chore": "patch"
                    }
                }
            ],
            [
                "@semantic-release/exec",
                {
                    "prepareCmd": "sed -i.bak 's/__VERSION__ = \".*\"/__VERSION__ = \"${nextRelease.version}\"/' version.py && rm version.py.bak"
                }
            ],
            [
                "@semantic-release/npm",
                {
                    "npmPublish": false
                }
            ],
            [
                "@semantic-release/github",
                {
                    "releasedLabels": false,
                    "successComment": false,
                    "failComment": false
                }
            ],
            [
                "@semantic-release/git",
                {
                    "assets": [
                        "package.json",
                        "version.py"
                    ],
                    "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
                }
            ]
        ]
    }
}
